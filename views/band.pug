extends layout

block content
	.single
		.single__hero
			img.single__image(src=`/uploads/${band.photoLarge || 'Band.jpg' }`)
			h2.title.title--single
				a(href=`/bands/${band.slug}`) #{band.name}
				
	.single__details.inner
		p.single__location= band.location.address
		p= band.description
		
		if band.tags
			ul.tags
				each tag in band.tags
					li.tag
						a.tag__link(href=`/tags/${tag}`)
							span.tag__text ##{tag}