extends layout

include icons/_youtube
include icons/_cross

block content
	//- pre= h.dump(albums)
	.single
		.single__hero
			img.single__image(src=`/uploads/${band.photos.gallery[0] || 'Band.jpg' }`)
			h2.title.title--single
				a(href=`/bands/${band.slug}`) #{band.name}
				
	.single__details
		p.single__location= band.location.address
		p.single__lead= band.description
		.single__body 
			.single__col
				p.single__detail
					strong Years Active: 
					!= h.buildDatesString(band.yearsActive)
				p.single__detail 
					strong Personnel: 
					!= band.personnel.join(' | ')
				p.single__detail 
					strong Past Personnel: 
					!= band.pastPersonnel.join(' | ')	
				p.single__detail 
					strong Record Labels: 
					!= band.labels.join(' ')
			.single__img-col
				img.single__detail-img(src=`/uploads/${band.photos.squareSm || 'Band.jpg' }`)
		if band.tags
			ul.tags
				each tag in band.tags
					li.tag
						a.tag__link(href=`/tags/${tag}`)
							span.tag__text ##{tag}
	if band.vimeoPL || band.youtubePL						
		.single__fullwidth.single__fullwidth--black
			//- if band.vimeoPL
			//- 	.single__video
			//- 		+youtube()
			//- 		.single__video-wrapper
			//- 			iframe(src=band.vimeoPL frameborder="0" allowfullscreen)
			if band.youtubePL
				.single__video
					//- +youtube()
					.single__video-wrapper
						iframe(src=band.youtubePL frameborder="0" allowfullscreen)
	if band.photos.gallery
		.single__fullwidth.single__fullwidth--ebony
			.single__gallery
				each photo in band.photos.galleryThumbs
					.single__gallery-thumb
						img.single__gallery-thumb-img(src=`/uploads/${photo}` alt=band.name)
	//- if user.admin
	//- 	+addAlbum(band)
	#galleryModal.modal
		.modal__container
			.modal__header
				h3.modal__title
				span.modal__close
					+cross() 
			.modal__body
			.modal__footer